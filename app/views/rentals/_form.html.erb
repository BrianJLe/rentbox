<div class="container">
	<div class="row">
		<%= form_for(@rental, :html => {:class => "form-horizontal"}) do |f| %>
		<div class="form-group">
			<%= f.label :movie_id, "Movies", class: "col-md-4 control-label" %>
			<div class="col-md-8">
				<%= f.collection_select :movie_id, @movies, :id, :title, :prompt=>true,  class: "form-control" %>
				<%= f.submit  "Rent", :class => "btn" %>
				<%= link_to 'Back', movies_path, :class => "btn" %>
			</div>
		</div>

		<% end %>
	</div>
</div>